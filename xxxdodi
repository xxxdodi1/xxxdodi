#include <stdio.h>
#include <math.h>
#include <iso646.h>
int main (){
    float a,b,c,x,f;
    printf("Введите значение a: ");
    scanf ("%f", &a);
    printf("Введите значение b: ");
    scanf ("%f", &b);
    printf("Введите значение c: ");
    scanf ("%f", &c);
    printf("Введите значение x: ");
    scanf ("%f", &x);
    if (x<0 && b !=0){
        f = (-x*x);
        printf ("значение f = %f\n",f);
    }
    else if (x>0 && b==0 ){
        f = (a-c*x)/c*x;
        if (x==0 || c==0){
            printf ("Знаменатель не может быть равен нулю))))))) ");
        }
        else {
            printf ("Значение f=%f\n", f);
        }
    }
    else {
        f=x/c;
        if (c==0) {
            printf ("Знаменатель не может быть равен нулю))))))) ");
        }
        else {
            printf ("Значение f=%f\n", f);
        }
    return 0;
}
}
